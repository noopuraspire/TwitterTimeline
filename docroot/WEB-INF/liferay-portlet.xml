<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>Twitter-Timeline</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.portlet.twitter.Configuration</configuration-action-class>
		<header-portlet-css>/css/mod_jmtwitter_default.css</header-portlet-css>
		<header-portlet-css>/css/mod_jmtwitterroll_bootstrap-carousel.css</header-portlet-css>
		<header-portlet-css>/css/vertical.css</header-portlet-css>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-css>/css/bootstrap.min.css</header-portlet-css>
		<header-portlet-css>/css/font-awesome.min.css</header-portlet-css>
		<footer-portlet-javascript>/js/jquery.min.js</footer-portlet-javascript>
		<footer-portlet-javascript>/js/bootstrap.js</footer-portlet-javascript>
		<footer-portlet-javascript>/js/bootstrap-carousel.js</footer-portlet-javascript>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>Twitter-Timeline-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
